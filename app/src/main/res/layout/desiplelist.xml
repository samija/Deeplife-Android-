<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"

    android:clickable="false"
    android:background="#fffdfdfd"
    android:id="@+id/des">


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:background="#fffdfdfd"
    android:weightSum="1"

    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/linearLayout3">

    <ImageView
        android:layout_width="152dp"
        android:layout_height="match_parent"
        android:id="@+id/loginimage" />

    <TextView
        android:layout_width="54dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="namer"
        android:id="@+id/tvreavel1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:background="@drawable/navigation"
        android:layout_above="@+id/linearLayout3"
        android:layout_toLeftOf="@+id/btnshowdesiplesB"
        android:layout_toStartOf="@+id/btnshowdesiplesB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-45dp"
        android:text="Welcome"
        android:textColor="#ff0f0f0f"
        android:layout_gravity="center_vertical"
        android:textSize="15dp"
        android:id="@+id/tvwelcome" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#828b90"
        android:id="@+id/linearLayout4"
        android:orientation="horizontal"></LinearLayout>


    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/badddesipleB"
        android:background="@drawable/adduser"
        android:layout_alignTop="@+id/btnshowdesiplesB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:visibility="invisible"
        android:background="#0099cc"
        android:layout_below="@+id/badddesipleB"
        android:isScrollContainer="false"
        android:fastScrollEnabled="true"
        android:scrollingCache="false"

        android:layout_above="@+id/linearLayout5" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnshowdesiplesB"
        android:background="@drawable/newbuttondesiples"
        android:textColor="#ff0d0d0d"
        android:layout_alignTop="@+id/btnshowactivitiesB"
        android:layout_toRightOf="@+id/btnshowactivitiesB"
        android:layout_toEndOf="@+id/btnshowactivitiesB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnshowactivitiesB"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/newbuttonactivities"
        android:textColor="#ff0d0d0d" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dplogo2"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView5" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignTop="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loading..."
        android:id="@+id/textView16"
        android:layout_alignTop="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:textColor="#ff0b0b0b" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#fffdfdfd"
        android:id="@+id/linearLayout5"
        android:orientation="horizontal"

        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#ff080808"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvtotaldisaples" />

    </RelativeLayout>



</RelativeLayout>
    <ListView
        android:layout_gravity="left"
        android:entries="@array/aboutab"
        android:layout_width="240dp"
        android:divider="@null"
        android:layout_height="match_parent" android:id="@+id/drawerlistl"
        android:background="#0099cc">
    </ListView>
</android.support.v4.widget.DrawerLayout>